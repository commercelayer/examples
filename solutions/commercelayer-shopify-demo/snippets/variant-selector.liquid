<div class="flex mt-4 relative">
  <!-- Variants (select, with optional quantity identifier) -->
  <select
    class="clayer-variant-select appearance-none w-full px-4 py-2 bg-white rounded border border-gray-400"
    name="variant"
    data-availability-message-container-id="availability-message"
    data-add-to-bag-id="add-to-bag"
    data-add-to-bag-quantity-id="add-to-bag-quantity"
    data-price-container-id="price-{{product.id}}"
  >
    <option value="" disabled selected>Select size</option>
    {% for variant in product.variants %}
      <option
        class="clayer-variant"
        data-sku-code="{{variant.sku}}"
        data-sku-name="{{product.title}} ({{variant.title}})"
        data-sku-reference="{{product.id}}|{{variant.id}}"
        {% assign image = product.images | first %}
        data-sku-image-url={{ image.src | product_img_url: 'large' }}
        >{{variant.title}}</option
      >
    {% endfor %}
  </select>
  <svg class="h-5 w-5 text-gray-500 absolute top-3 right-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
    <path fill-rule="evenodd" d="M10 3a1 1 0 01.707.293l3 3a1 1 0 01-1.414 1.414L10 5.414 7.707 7.707a1 1 0 01-1.414-1.414l3-3A1 1 0 0110 3zm-3.707 9.293a1 1 0 011.414 0L10 14.586l2.293-2.293a1 1 0 011.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
  </svg>
</div>
